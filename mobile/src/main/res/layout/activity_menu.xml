<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamplesActivity">

    <LinearLayout
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <Button
            android:id="@+id/button_floatingballs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floating Balls" />

        <Button
            android:id="@+id/button_complexshapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complex Shapes" />

        <Button
            android:id="@+id/button_cardriving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Driving" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>